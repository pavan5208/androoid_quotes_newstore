<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headerText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="regularText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="inputEditText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:minHeight">@dimen/dimens_40dp</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/shape_search_bg</item>
    </style>

    <style name="ctaButtonStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/dimen_250dp</item>
        <item name="android:background">@color/teal_700</item>
    </style>

</resources>